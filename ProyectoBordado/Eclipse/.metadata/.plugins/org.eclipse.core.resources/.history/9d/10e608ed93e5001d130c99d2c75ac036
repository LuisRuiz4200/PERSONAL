package vistas;

import javax.swing.*;
import javax.swing.GroupLayout.Alignment;
import javax.swing.LayoutStyle.ComponentPlacement;
import javax.swing.table.DefaultTableModel;

import com.toedter.calendar.JDateChooser;

@SuppressWarnings("serial")
public class DlgConsultaIngresoAvio extends JFrame {
	public static void main(String[] args) {
		DlgConsultaIngresoAvio ventana = new DlgConsultaIngresoAvio();
		ventana.setVisible(true);
	}
	private JButton btnConsultar;
	private JDateChooser dcFecha;
	private DefaultTableModel model;
	private JLabel lblFecha;
	private JScrollPane spTable;
	private JTable table;

	public DlgConsultaIngresoAvio() {

		this.setTitle("LISTA DE INGRESO DE AVIOS");
		this.setBounds(0, 0, 622, 459);
		this.setLocationRelativeTo(this);
		
		spTable = new JScrollPane();

		btnConsultar = new JButton("CONSULTAR");

		dcFecha = new JDateChooser();

		lblFecha = new JLabel("Fecha");
		getContentPane().add(btnConsultar);
		getContentPane().add(dcFecha);
		getContentPane().add(lblFecha);
		
		SpringLayout springLayout = new SpringLayout();
		springLayout.putConstraint(SpringLayout.NORTH, lblFecha, 23, SpringLayout.NORTH, getContentPane());
		springLayout.putConstraint(SpringLayout.WEST, lblFecha, 10, SpringLayout.WEST, getContentPane());
		springLayout.putConstraint(SpringLayout.EAST, lblFecha, 60, SpringLayout.WEST, getContentPane());
		springLayout.putConstraint(SpringLayout.NORTH, dcFecha, 43, SpringLayout.NORTH, getContentPane());
		springLayout.putConstraint(SpringLayout.WEST, dcFecha, 10, SpringLayout.WEST, getContentPane());
		springLayout.putConstraint(SpringLayout.EAST, dcFecha, 133, SpringLayout.WEST, getContentPane());
		springLayout.putConstraint(SpringLayout.NORTH, btnConsultar, 81, SpringLayout.NORTH, getContentPane());
		springLayout.putConstraint(SpringLayout.WEST, btnConsultar, 443, SpringLayout.WEST, getContentPane());
		getContentPane().setLayout(springLayout);
		
		table = new JTable();
		spTable = new JScrollPane();
		springLayout.putConstraint(SpringLayout.NORTH, spTable, -24, SpringLayout.SOUTH, getContentPane());
		springLayout.putConstraint(SpringLayout.WEST, spTable, 20, SpringLayout.WEST, getContentPane());
		springLayout.putConstraint(SpringLayout.SOUTH, spTable, -23, SpringLayout.SOUTH, getContentPane());
		springLayout.putConstraint(SpringLayout.EAST, spTable, 582, SpringLayout.WEST, getContentPane());
		spTable.setViewportView(table);
		table.setFillsViewportHeight(rootPaneCheckingEnabled);
		getContentPane().add(spTable);
		
		model = new DefaultTableModel();
		model.addColumn("ID");
		model.addColumn("NRO OP");
		model.addColumn("COD. AVIO");
		model.addColumn("CANT");
		model.addColumn("FECHA");
		table.setModel(model);
		
		
	}

}
